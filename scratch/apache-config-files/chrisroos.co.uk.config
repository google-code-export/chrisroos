<VirtualHost *:80>
  ServerAdmin chris@seagul.co.uk
  ServerName chrisroos.co.uk
  ServerAlias www.chrisroos.co.uk

  DocumentRoot /u/chrisroos/www/chrisroos.co.uk/current/public
  <Directory /u/chrisroos/www/chrisroos.co.uk/current/public>
    AllowOverride All
    allow from all
  </Directory>
  <DirectoryMatch "^/.*/\.svn/">
    ErrorDocument 403 /404.html
    Order allow,deny
    Deny from all
    Satisfy All
  </DirectoryMatch>
  ErrorLog /u/chrisroos/www/chrisroos.co.uk/shared/log/error_log
  CustomLog /u/chrisroos/www/chrisroos.co.uk/shared/log/access_log common
  # RewriteLogLevel 3
  RewriteLog /u/chrisroos/www/chrisroos.co.uk/shared/log/rewrite_log

  RewriteEngine On
  # <anything>.chrisroos.co.uk -> chrisroos.co.uk
  RewriteCond %{HTTP_HOST} !^chrisroos.co.uk$ [NC]
  RewriteRule ^/(.*)$ http://chrisroos.co.uk/$1 [R=301,L] 

  # Amazon Wishlist
  RewriteRule ^/amazonwishlist http://www.amazon.co.uk/gp/registry/IO9HVNCPEWGD [R]
</VirtualHost>