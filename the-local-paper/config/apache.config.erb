<VirtualHost *:80>
  ServerName the-local-paper.co.uk
  ServerAlias www.the-local-paper.co.uk
  DocumentRoot <%= public_directory %>
  # Allow us to do cool things in the .htaccess file
  <Directory <%= public_directory %>>
    AllowOverride All
    Allow from all
  </Directory>
  # Block access to the .svn directories
  <DirectoryMatch "^/.*/\.svn/">
    ErrorDocument 403 /404.html
    Order allow,deny
    Deny from all
    Satisfy All
  </DirectoryMatch>
  ErrorLog <%= log_directory %>/error_log
  CustomLog <%= log_directory %>/access_log common
  # RewriteLogLevel 3
  RewriteLog <%= log_directory %>/rewrite_log
</VirtualHost>

<VirtualHost *:80>
  ServerName tlpa.co.uk
  RewriteEngine On
