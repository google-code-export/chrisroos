<VirtualHost *:80>
  ServerAdmin www-admin@seagul.co.uk
  ServerName <%= domain %>
  ServerAlias www.<%= domain %>

  DocumentRoot /u/chrisroos/www/blog.seagul.co.uk/current/public
  <Directory /u/chrisroos/www/blog.seagul.co.uk/current/public
    AllowOverride All
    allow from all
  </Directory>
  <DirectoryMatch "^/.*/\.svn/">
    ErrorDocument 403 /404.html
    Order allow,deny
    Deny from all
    Satisfy All
  </DirectoryMatch>
  ErrorLog <%= log_directory %>/error_log
  CustomLog <%= log_directory %>/access_log common
  # RewriteLogLevel 3
  RewriteLog <%= log_directory %>/rewrite_log

  RewriteEngine On
  # <anything>.chrisroos.co.uk -> chrisroos.co.uk
  RewriteCond %{HTTP_HOST} !^<%= domain %>$ [NC]
  RewriteRule ^/(.*)$ http://<%= domain %>/$1 [R=301,L] 

  # Amazon Wishlist
  RewriteRule ^/amazonwishlist http://www.amazon.co.uk/gp/registry/IO9HVNCPEWGD [R]
</VirtualHost>

