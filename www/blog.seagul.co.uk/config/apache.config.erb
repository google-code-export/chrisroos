<VirtualHost *:80>
  ServerAdmin www-admin@seagul.co.uk
  ServerName <%= domain %>
  DocumentRoot <%= public_directory %>
  <Directory <%= public_directory %>>
    AllowOverride All
    allow from all
  </Directory>
  <DirectoryMatch "^/.*/\.svn/">
    ErrorDocument 403 /404.html
    Order allow,deny
    Deny from all
    Satisfy All
  </DirectoryMatch>
  ErrorLog <%= log_directory %>/error_log
  CustomLog <%= log_directory %>/access_log common
  # RewriteLogLevel 3
  RewriteLog <%= log_directory %>/rewrite_log
  
  RewriteEngine On
  
  # blog.seagul.co.uk -> chrisroos.co.uk
  RewriteCond %{HTTP_HOST} ^<%= domain %>$ [NC]
  RewriteRule ^/(.*)$ http://<%= chrisroos %>/$1 [R=301,L]
</VirtualHost>
